generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Athlete {
  id            String       @id @default(cuid())
  name          String
  email         String       @unique
  age           Int?
  passwordHash  String
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  sessions      Session[]
}

model Official {
  id            String       @id @default(cuid())
  name          String
  email         String       @unique
  passwordHash  String
  role          String       @default("official") 
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
}

model Session {
  id         String       @id @default(cuid())
  athleteId  String
  athlete    Athlete      @relation(fields: [athleteId], references: [id])
  createdAt  DateTime     @default(now())

  results    TestResult[]
}

model TestResult {
  id         String   @id @default(cuid())
  sessionId  String
  session    Session  @relation(fields: [sessionId], references: [id])

  testType   String   
  metrics    Json    

  createdAt  DateTime @default(now())
}
